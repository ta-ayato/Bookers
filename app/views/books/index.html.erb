<div class="index">
  <h1>Books</h1>
  <table class="books-table">
    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thread>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td class="title"><%= book.title %></td>
        <td class="body"><%= book.body %></td>
        <td class="action"><%= link_to "Show", "/books/#{book.id}" %></td>
        <td class="action"><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td class="action"><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




<div class="new">
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @book, url:"/books", method: :post do |f| %>
    <div class"new-content>
      <h6>Title</h6>
      <%= f.text_field :title %>

      <h6>Body<h6>
      <%= f.text_area :body %>
    </div>
    <div class="new-submit">
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</div>